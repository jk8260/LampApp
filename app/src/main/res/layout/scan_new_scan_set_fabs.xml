<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_new_scan_set">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/scan_set_add_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fab_add_field"
        app:backgroundTint="@color/accent"
        app:elevation="10dp"
        android:scaleType="center"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/scan_set_done"
        android:layout_marginBottom="@dimen/fab_bottom_margin_default"
        android:clickable="true"
        app:rippleColor="@color/primaryDark" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/scan_set_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fab_check"
        app:backgroundTint="@color/primary"
        app:elevation="10dp"
        android:scaleType="center"
        android:layout_alignBottom="@+id/footer"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/fab_bottom_margin_small"
        android:clickable="true"
        app:rippleColor="@color/accentDark" />
</merge>