<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginEnd="@dimen/search_results_top_margin"
    android:paddingTop="@dimen/default_ui_padding_small"
    android:paddingBottom="@dimen/default_ui_padding_small">

    <TextView
        android:id="@+id/field_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.33"
        android:textColor="@color/grey5"
        style="@style/caption"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingEnd="@dimen/search_field_name_margin_right"/>

    <TextView
        android:id="@+id/field_value"
        android:layout_width="0dp"
        android:layout_weight="0.67"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        style="@style/Subheading1"/>

</LinearLayout>