<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/accentDark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowBackground">@color/accent</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MainActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Introduction" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Blocking" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@android:anim/fade_in</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="GuestLoginPasswordResetTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Headline">
        <item name="android:textSize">@dimen/headline</item>
    </style>
    
    <style name="Title1">
        <item name="android:textSize">@dimen/title1</item>
        <item name="android:textStyle">bold|normal</item>
    </style>

    <style name="Title1Medium">
        <item name="android:textSize">@dimen/title1</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
    </style>

    <style name="Title2">
        <item name="android:textSize">@dimen/title2</item>
        <item name="android:textStyle">bold|normal</item>
    </style>

    <style name="Title3">
        <item name="android:textSize">@dimen/title2</item>
    </style>

    <style name="Subheading1">
        <item name="android:textSize">@dimen/subheading</item>
    </style>

    <style name="Subheading2">
        <item name="android:textSize">@dimen/subheading</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
    </style>

    <style name="Body1">
        <item name="android:textSize">@dimen/body</item>
    </style>

    <style name="Body2">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textStyle">bold|normal</item>
    </style>

    <style name="caption">
        <item name="android:textSize">@dimen/caption</item>
    </style>

    <style name="LoginEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_text_field_height</item>
        <item name="android:layout_marginStart">@dimen/default_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/default_small_margin</item>
        <item name="android:paddingStart">@dimen/login_edittext_padding</item>
        <item name="android:paddingEnd">@dimen/login_edittext_padding</item>
        <item name="android:background">@drawable/login_edittext</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@drawable/hint_selector</item>
        <item name="android:textSelectHandle">@drawable/apptheme_text_select_handle_middle</item>
        <item name="android:textSelectHandleLeft">@drawable/apptheme_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/apptheme_text_select_handle_right</item>
        <item name="android:textColorHighlight">@color/grey4</item>
        <item name="android:textSize">@dimen/title2</item>
    </style>

    <style name="IntroductionTitles" parent="Subheading1">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/intro_text_margin</item>
    </style>

    <style name="IntroductionDescription" parent="Body1">
        <item name="android:textColor">@color/grey3</item>
        <item name="android:layout_marginEnd">@dimen/intro_text_margin</item>
    </style>

    <style name="IntroFab">
        <item name="android:layout_height">@dimen/intro_fab_size</item>
        <item name="android:layout_width">@dimen/intro_fab_size</item>
        <item name="android:layout_marginStart">@dimen/default_horizontal_margin</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:tint">@color/primary</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="ProgressDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:alertDialogStyle">@style/AlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/primaryDark</item>
    </style>

    <style name="AlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

</resources>
